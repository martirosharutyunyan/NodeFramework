{
  "name": "NodeFramework",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon --config nodemon.json",
    "server": "npm run build && node fastify.js",
    "build": "tsc && node createServer.js",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create -f ormconfig -d application/migrations -n",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -f ormconfig -d application/migrations -n",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -f ormconfig",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run -f ormconfig",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix . --ext .ts",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fastify": "^3.20.2",
    "lodash": "^4.17.21",
    "pg": "^8.7.1",
    "typeorm": "^0.2.37"
  },
  "devDependencies": {
    "@types/pg": "^8.6.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/eslint-plugin-tslint": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-formatter-github": "^1.0.11",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.9.1",
    "eslint-plugin-unicorn": "^32.0.1",
    "husky": "^7.0.1",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  }
}
